{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"diagnostics": true,
		"listEmittedFiles": true,
		"allowImportingTsExtensions": null,
		"noEmit": false,
		"declaration": true,
		"outDir": "./dist",
		"allowJs": true
	},
	"include": ["**/*.ts"],
	"exclude": ["**/node_modules", "**/*.spec.ts", "*.config.ts"]
}
